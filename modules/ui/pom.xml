<?xml version="1.0" encoding="UTF-8"?>
<project xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xmlns="http://maven.apache.org/POM/4.0.0"
  xsi:schemaLocation="http://maven.apache.org/POM/4.0.0
         http://maven.apache.org/maven-v4_0_0.xsd">
  <artifactId>ui</artifactId>
  <build>
    <plugins>
      <plugin>
        <artifactId>fmt-maven-plugin</artifactId>
        <configuration>
          <filesNamePattern>.*\.java</filesNamePattern>
          <skip>false</skip>
          <skipSortingImports>false</skipSortingImports>
          <sourceDirectory>${basedir}/src/main/java</sourceDirectory>
          <style>google</style>
          <testSourceDirectory>${basedir}/src/test/java</testSourceDirectory>
          <verbose>true</verbose>
        </configuration>
        <executions>
          <execution>
            <goals>
              <goal>format</goal>
            </goals>
          </execution>
        </executions>
        <groupId>com.coveo</groupId>
        <version>${fmt.version}</version>
      </plugin>
      <!-- plugin>
          <groupId>com.oracle.substratevm</groupId>
          <artifactId>native-image-maven-plugin</artifactId>
          <version>19.2.1</version>
          <configuration>
              <skip>true</skip>
              <buildArgs>
                  -report-unsupported-elements-at-runtime
                  -initialize-at-build-time
                  -initialize-at-run-time=groovy.grape.GrapeIvy
                  -no-fallback
                  -no-server
                  -allow-incomplete-classpath
                  -H:ConfigurationFileDirectories=conf=../src/META-INF/native-image
              </buildArgs>
              <mainClass>ffx.Main</mainClass>
          </configuration>
          <executions>
              <execution>
                  <goals>
                      <goal>native-image</goal>
                  </goals>
                  <phase>package</phase>
              </execution>
          </executions>
      </plugin -->
      <!-- Create a shaded jar with all FFX dependencies -->
      <plugin>
        <artifactId>maven-shade-plugin</artifactId>
        <configuration>
          <artifactSet>
            <excludes>
              <exclude>log4j:log4j</exclude>
              <exclude>org.codehaus.groovy:groovy-testng</exclude>
              <!-- groovy and groovy-macro both define the service:
                  org.codehaus.groovy.transform.ASTTransformation -->
              <exclude>org.codehaus.groovy:groovy-macro</exclude>
            </excludes>
          </artifactSet>
          <filters>
            <filter>
              <artifact>*:*</artifact>
              <excludes>
                <exclude>**/module-info.class</exclude>
                <exclude>META-INF/groovy/org.codehaus.groovy.runtime.ExtensionModule</exclude>
                <exclude>META-INF/DEPENDENCIES</exclude>
                <exclude>META-INF/MANIFEST.MF</exclude>
                <exclude>META-INF/maven/**</exclude>
                <exclude>META-INF/groovy-release-info.properties</exclude>
                <exclude>**/LICENSE*</exclude>
                <exclude>**/NOTICE*</exclude>
                <exclude>**/log4j2.xml</exclude>
                <exclude>**/Log4j2Plugins.dat</exclude>
              </excludes>
            </filter>
          </filters>
          <finalName>ffx-all</finalName>
          <transformers combine.children="append">
            <!-- The GroovyResourceTransformer does not work. -->
            <!-- transformer
              implementation="org.apache.maven.plugins.shade.resource.GroovyResourceTransformer">
              <extModuleName>org.codehaus.groovy.runtime.ExtensionModule</extModuleName>
              <extModuleVersion>3.0.0</extModuleVersion>
            </transformer -->
            <transformer
              implementation="org.apache.maven.plugins.shade.resource.ManifestResourceTransformer">
              <mainClass>ffx.Main</mainClass>
              <manifestEntries>
                <Multi-Release>true</Multi-Release>
                <X-Compile-Source-JDK>${compileVersion}</X-Compile-Source-JDK>
                <X-Compile-Target-JDK>${targetVersion}</X-Compile-Target-JDK>
              </manifestEntries>
            </transformer>
            <transformer
              implementation="org.apache.maven.plugins.shade.resource.IncludeResourceTransformer">
              <file>${basedir}/src/resources/log4j2.properties</file>
              <resource>log4j2.properties</resource>
            </transformer>
          </transformers>
        </configuration>
        <executions>
          <execution>
            <goals>
              <goal>shade</goal>
            </goals>
            <phase>package</phase>
          </execution>
        </executions>
        <groupId>org.apache.maven.plugins</groupId>
        <version>${shade.version}</version>
      </plugin>

      <!-- Copy shaded FFX jar to the bin directory. -->
      <plugin>
        <artifactId>maven-resources-plugin</artifactId>
        <executions>
          <execution>
            <configuration>
              <outputDirectory>${basedir}/../../bin</outputDirectory>
              <overwrite>true</overwrite>
              <resources>
                <resource>
                  <directory>target</directory>
                  <includes>
                    <include>ffx-all.jar</include>
                  </includes>
                </resource>
              </resources>
            </configuration>
            <goals>
              <goal>copy-resources</goal>
            </goals>
            <id>copy-jar</id>
            <phase>install</phase>
          </execution>
        </executions>
        <version>${resources.version}</version>
      </plugin>

      <plugin>
        <artifactId>appassembler-maven-plugin</artifactId>
        <configuration>
          <!-- Set the target configuration directory to be used in the bin scripts -->
          <configurationDirectory>conf</configurationDirectory>
          <!-- Extra JVM arguments that will be included in the bin scripts -->
          <extraJvmArguments>-Xms1G -Xmx8G</extraJvmArguments>
          <!-- Generate bin scripts for windows and unix -->
          <platforms>
            <platform>windows</platform>
            <platform>unix</platform>
          </platforms>
          <programs>
            <program>
              <id>ffx</id>
              <mainClass>ffx.Main</mainClass>
            </program>
            <program>
              <id>ffxc</id>
              <mainClass>ffx.Main</mainClass>
            </program>
            <program>
              <id>scheduler</id>
              <mainClass>ffx.Main</mainClass>
            </program>
          </programs>
        </configuration>
        <groupId>org.codehaus.mojo</groupId>
        <version>${appassembler.version}</version>
      </plugin>
    </plugins>
    <resources>
      <resource>
        <directory>${basedir}/src/main/java/ffx/ui/commands
        </directory>
        <includes>
          <include>*.xml</include>
          <include>*.dtd</include>
        </includes>
        <targetPath>ffx/ui/commands</targetPath>
      </resource>
      <resource>
        <directory>${basedir}/src/main/java/ffx/ui/properties
        </directory>
        <includes>
          <include>*.*</include>
        </includes>
        <targetPath>ffx/ui/properties</targetPath>
      </resource>
      <resource>
        <directory>${basedir}/src/main/java/ffx/ui/icons
        </directory>
        <includes>
          <include>*.png</include>
          <include>*.gif</include>
        </includes>
        <targetPath>ffx/ui/icons</targetPath>
      </resource>
    </resources>
  </build>
